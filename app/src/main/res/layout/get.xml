<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F0F0F8">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:gravity="center"
        android:background="#FFFFFF"
        android:layout_gravity="center">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="#ABEDFF">

            <TextView
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:textColor="#1F1689"/>

            <EditText
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_width="wrap_content"
                android:id="@+id/getEditTextName"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:textColor="#1F1689"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"/>

            <TextView
                android:onClick="ocl"
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:id="@+id/getTextViewDate"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"/>

            <TextView
                android:onClick="ocl"
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:id="@+id/getTextViewTime"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:layout_height="wrap_content"
                android:text="Place"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:padding="@dimen/padding"/>

            <LinearLayout
                android:layout_margin="@dimen/margin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:onClick="ocl"
                    android:textColor="#1F1689"
                    android:layout_height="wrap_content"
                    android:text="Madhapur"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:id="@+id/getEditTextPlace"
                    android:layout_gravity="left|center"
                    android:layout_weight="1.0"/>

                <Button
                    android:onClick="ocl"
                    android:textColor="#1F1689"
                    android:text="GPS"
                    android:layout_gravity="right"
                    android:layout_height="43dp"
                    android:layout_width="wrap_content"
                    android:background="#ABEDF7"
                    android:id="@+id/buttonGPS">

                </Button>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="Longitude"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="78E46"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:id="@+id/getTextViewLongitude"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="Latitude"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="17N40"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:id="@+id/getTextViewLatitude"/>

        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <TextView
                android:textColor="#1F1689"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"
                android:layout_height="wrap_content"
                android:text="TimeZone"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"/>

            <TextView
                android:textColor="#1F1689"
                android:layout_height="wrap_content"
                android:text="+5.5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:id="@+id/getTextViewTimeZone"
                android:layout_margin="@dimen/margin"
                android:padding="@dimen/padding"/>

        </TableRow>

    </TableLayout>

    <Button
        android:onClick="ocl"
        android:textColor="#1F1689"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_width="250dp"
        android:id="@+id/getButtonOk"
        android:background="#ABEDF7"/>

</LinearLayout>

