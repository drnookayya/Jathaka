<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#ff4422" />
            <corners
                android:radius="0dp" />
          <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />		
			<margin
				android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />		
			
        </shape>
    </item>
</selector>
